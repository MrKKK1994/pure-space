.container {
    display: flex;
    flex-direction: column;
    background-color: #fff;
    box-shadow: 2px 2px 3px #e3e3e3;
    width: 330rpx;
}

.header {
    display: flex;
    justify-content: space-between;
    width: 100%;
    box-sizing: border-box;
    padding: 20rpx 24rpx;
}

.tag {
    background-color: rgb(247, 247, 247);
    padding: 4rpx 14rpx 0;
    font-size: 28rpx;
}

.image {
    width: 330rpx;
    height: 236rpx;
}

.image image {
    width: 100%;
    height: 100%;
}

.music-image {
    width: 230rpx !important;
    height: 230rpx !important;
    padding: 3rpx 50rpx;
}

.content {
    box-sizing: border-box;
    width: 100%;
    padding: 0 24rpx;
    margin: 40rpx 0;
    font-size: 28rpx;
    color: rgb(170, 170, 170);
    height: 70rpx;
    overflow: hidden;
}