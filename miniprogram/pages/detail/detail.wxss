.item {
    display: flex;
    flex-direction: column;
    font-size: 24rpx;
    line-height: 40rpx;
    margin-right: 26rpx;
    color: rgb(140, 140, 140);
}

.darker {
    color: rgb(80, 80, 80);
}

.tag-container {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

tagCmp:nth-child(1)>view {
    background-color: rgb(255, 250, 221);
}

tagCmp:nth-child(2)>view {
    background-color: rgb(239, 250, 255);
}

.like-count {
    font-size: 20rpx;
    color: rgb(160, 160, 160);
}

.footer {
    position: fixed;
    bottom: 0;
    z-index: 100;
    width: 100%;
    display: flex;
    flex-direction: row;
    padding: 14rpx 28rpx;
    align-items: center;
    box-sizing: border-box;
    background-color: #fff;
    box-shadow: 1px -1px 1px #e3e3e3;
    justify-content: space-between;
}

.input {
    height: 54rpx;
    font-size: 24rpx;
    border: 1px solid rgb(120, 120, 120);
    border-radius: 30rpx;
    width: 68%;
    display: flex;
    align-items: center;
    padding-left: 28rpx;
}

.share {
    width: 38rpx;
    height: 38rpx;
}

.share>image {
    width: 100%;
    height: 100%;
}

.comment-container {
    position: fixed;
    flex-direction: column;
    bottom: 0;
    z-index: 1000;
    width: 100%;
    display: flex;
    box-sizing: border-box;
    background-color: #fff;
}

.comment-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    border-bottom: 1px solid rgb(250, 250, 250);
    padding: 20rpx 28rpx;
    box-sizing: border-box;
}

.notice {
    font-size: 26rpx;
    color: rgb(170, 170, 170);
}

.container-padding {
    padding: 30rpx 28rpx;
}

.input-container{
    padding: 0 28rpx 20rpx;
}

.input-container > input{
    border-radius: 40rpx;
    background-color: rgb(245, 245, 245);
    padding: 12rpx 28rpx;
