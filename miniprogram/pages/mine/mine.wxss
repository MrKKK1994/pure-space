.container {
    display: flex;
    flex-direction: column;
    width: 100%;
    background-color: #f5f5f5;
}

.header {
    width: 100%;
    position: relative;
}

.bg-image {
    width: 100%;
    height: 574rpx;
}

.user-info {
    position: absolute;
    top: 260rpx;
    left: calc(50% - 30px);
    z-index: 100;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.avatar {
    height: 120rpx;
    width: 120rpx;
    border-radius: 50%;
}

.nickName {
    margin-top: -26rpx;
}

.actions {
    position: absolute;
    bottom: 48rpx;
    display: flex;
    justify-content: space-around;
    z-index: 100;
    width: 100%;
    left: 0;
}

.actions image {
    height: 40rpx;
    width: 40rpx;
    margin-bottom: 14rpx;
}

.action-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 28rpx;
    color: rgb(190, 190, 190);
}

.number {
    margin-bottom: 14rpx;
    font-size: 40rpx;
    color: #000;
    line-height: 40rpx;
}

.like-box {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 20rpx;
}

.book-container {
    margin-top: 10rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    padding: 20rpx 30rpx 0;
    justify-content: space-between;
}

.book-container>collectionCmp {
    margin-bottom: 30rpx;
}

.like-image {
    width: 97rpx;
    height: 42rpx;
}